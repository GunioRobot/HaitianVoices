<h1>Add Your Story</h1>

<% form_for( @story ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, 'Title: <span>a short summary</span>' %><br />
    <%= f.text_field :title, :class => 'long' %>
  </p>
  <p>
    <%= f.label :body, 'Your Story: <span>tell us your experiences</span>' %><br />
    <%= f.text_area :body, :class => 'tall' %>
  </p>
  
  <p>
    <%= f.label :about, 'A little about you: <span>contact information, a brief bio, whatever you care to share<br>(this will not show up on the site - this is here in case our volunteers need to get in touch)</br>' %><br />
    <%= f.text_area :about, :class => 'thin' %>
  </p>  
  
  <p>
  <label>Spam prevention: <span>so we can tell you're human</span></label><br/>
  <%= recaptcha_tags %><br/>
  </p>
  
  <p>
    <%= f.submit 'Add Your Story' %>
  </p>
<% end %>

<p>
<%= link_to 'Back Home', stories_path %>
</p>