<% content_for :html_head do %>
  <% if @stories_stylesheet_defined.nil?   # RWP: hack for once-only include %>
    <%= stylesheet_link_tag 'stories' %>
    <%= javascript_include_tag 'stories.js' %>
    <% @stories_stylesheet_defined = true %>
  <% end %>
<% end %>

<div class='story'>
  <% if story.title %>
    <h3><%= link_to story.title, story_path(story) %></h3>
  <% end %>
  <% if story.location %>
    <h4><%= t :vss_location %>: <%= story.location %></h4>
  <% end %>
  <% if @requestedLanguage %>
    <div class="languages">
      Read this story in
      <% @langs.each do |lang| %>
        <%= link_to lang.title, translatedStory_path(:language => lang.title) %>
      <% end %>
    </div>
  <% end %>
  <div class='body'>
    <% if !(story.pictures.blank?) %><div class='media'>
      <div class='picture'>
        <% story.pictures.each do |pic| %>
          <%= image_tag pic.photo.url(:thumb), :title => pic.caption, :class => 'img_expand', :large_pic_id => pic_url_as_id(pic.photo.url(:thumb)) %>
          <span style="display:none;">
            <%= image_tag pic.photo.url(:medium), :id => pic_url_as_id(pic.photo.url(:thumb)) , 
                                                 :title => pic.caption, :class => 'img_expand' %>
          </span>
        <% end %>
      </div>
    </div><% end %>
    <p class='story'><%= display(story.body) %></p>
  </div>
</div>