<h1>Editing Language</h1>

<% form_for [:admin, @lang] do |f| %>
  <%= f.error_messages %>
  <div class="story">
    <p>
      <%= f.label :title, 'Title: <span>localized language name</span>' %><br />
      <%= f.text_field :title, :class => 'long' %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  </div>
<% end %>
<%= link_to 'Back', admin_languages_path %>