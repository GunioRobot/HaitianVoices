<h1>Users</h1>

<p>
  <%= link_to "Add User", new_admin_user_path %>
</p>

<table width="100%" cellspacing="0" cellpadding="5">
  <tr>
    <th>Login</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Role</th>
  </tr>
  <% @users.each do |user| %><tr>
    <td><%= link_to h(user.login), [:admin, user] %></td>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.role_name %></td>
  </tr><% end %>
</table>