<h1>Listing stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%=h story.title %></td>
    <td><%=h story.body %></td>
    <td><%= link_to 'Show', admin_story_path(story) %></td>
    <td><%= link_to 'Edit', edit_admin_story_path(story) %></td>
    <td><%= link_to 'Destroy', admin_story_path(story), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New story', new_admin_story_path %>